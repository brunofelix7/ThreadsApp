<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="br.com.sample.threadsapp.activities.MainActivity">

    <TextView
        android:id="@+id/tv_numer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="46sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/b_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Generate Numbers"
        android:textAllCaps="false"
        android:onClick="showNumbers" />

    <Button
        android:id="@+id/b_image_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToDownload"
        android:text="Image Download"
        android:textAllCaps="false"
        android:layout_below="@id/b_generate"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
